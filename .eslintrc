{
    "rules": {
        "comma-dangle": [2, "always-multiline"],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "no-return-assign": [0],
        "semi": [2, "always"],
        "sort-imports": ["error", { "ignoreCase": true }],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
        "space-unary-ops": [2, { "words": true, "nonwords": true }]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "vue"
}
